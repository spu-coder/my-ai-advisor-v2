# University System Scraper
VERIFY_UNIVERSITY_SSL=true

# Rate Limiting
RATE_LIMIT_REDIS_URL=redis://redis:6379/0
REDIS_CACHE_URL=redis://redis:6379/1
RAG_CACHE_TTL=600

